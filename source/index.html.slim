      li.dib.mlm.mrm.mtxxl.mbxxl.tal
        - if data.projects[p.first].overview.locked
          = link_to "mailto:ux@rodrigodalcin.com" do
            .s-home--card.pbl.pll.prl
              figure.mbxl.por
                img.db.poa src="#{'/images/work/' + p.first + '/main.png'}"
                figcaption
                  h2.mbxxs
                    = data.projects[p.first].overview.title
                  p.weight-medium.mbs
                    - data.projects[p.first].overview.methodology.each_with_index do |m, idx|
                      = m.name
                      - unless data.projects[p.first].overview.methodology.last == m
                        |,&nbsp;
                  p.lead
                    = data.projects[p.first].overview.blurb
              p.lead.cta.weight-medium
                | Wanna learn more? Contact me  â†—
        - else
          = link_to "#{'/work/' + p.first + '.html'}" do
            .s-home--card.pbl.pll.prl
              figure.mbxl.por
                img.db.poa src="#{'/images/work/' + p.first + '/main.png'}"
                figcaption
                  h2.mbxxs
                    = data.projects[p.first].overview.title
                  p.weight-medium.mbs
                    - data.projects[p.first].overview.methodology.each_with_index do |m, idx|
                      = m.name
                      - unless data.projects[p.first].overview.methodology.last == m
                        |,&nbsp;
                  p.lead
                    = data.projects[p.first].overview.blurb
              p.lead.cta.weight-medium
                | See case study ->
        end

