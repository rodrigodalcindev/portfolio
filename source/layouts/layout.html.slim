      .l-header--logo.tar
        h1.plxxs.prxxs
          | Rodrigo Dalcin
        strong.dib.plxxs.prxxs.ttu
          | UX Specialist
      - unless current_page.data.type == "home"
        nav.l-nav--action.tac.poa
          = link_to '/' do
            i.db
              | ‚Üê
            span.weight-medium.mtxxs.ttu.db
              | Back
    main class="s-#{current_page.data.type}"
      = yield
    footer
      .s-home-section--trigger
        h1.has-highlighter
          = link_to 'Contact', '#'
